{
  "name": "SongTaste Extension",
  "version": "4.6",
  "description": "The extension made by zghaia@gmail.com for downloading musics in <http://www.songtaste.com>.",
  "browser_action": {
    "default_title": "SongTaste Extension",
    "default_icon": "icon.png"
  },
  "icons": {
      "128"	: "icon.png",
      "48"	: "icon.png",
	  	"16"	: "icon.png"
   },
  "permissions": [
    "tabs",
		"notifications",
    "http://*.songtaste.com/*",
		"http://*.*.rayfile.com/*",
		"http://*.duomi.com/*",
		"http://*/*"
		],
	"options_page": "option.html",	
  "background_page": "background.html",
  "update_url": "http://zghaia-songtaste-extension.googlecode.com/files/updates.xml"
}